{
  "name": "hbnf-syntax-highlighter",
  "displayName": "hbnf syntax highlighter",
  "description": "Simple syntax highlighter hbnf grammar inside markdown code blocks and also for .hbnf files",
  "version": "0.1.0",
  "publisher": "BH-17",
  "repository": {
    "type": "git",
    "url": "https://github.com/biohazard-17/hbnf-syntax-highlighter.git"
  },
  "main": "./src/extension.js", 
  "activationEvents": [
    "onLanguage:hbnf", 
    "onCommand:hbnf.format" 
  ],
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "hbnf.format": {
        "type": "object",
        "properties": {
          "hbnf.format.verticalAlignment":{
            "type":"boolean",
            "default": true,
            "description": "Vertically align alternatives with indentation"
          },
          "indentSize": {
            "type": "number",
            "default": 4,
            "description": "number of spaces for indentation"
          }
        }
      }
    },
    "commands": [
      {
        "command": "hbnf.format",
        "title": "Format HBNF Document",
        "category": "HBNF"
      }
    ],
    "themes": [
      {
        "label": "HBNF Colors",
        "uiTheme": "vs-dark",
        "path": "./themes/hbnf-color-theme.json"
      },
      {
        "label": "HBNF Colors",
        "uiTheme": "vs",
        "path": "./themes/hbnf-light-theme.json"
      }
    ],
    "languages": [
      {
        "id": "hbnf",
        "aliases": [
          "HBNF",
          "hbnf"
        ],
        "extensions": [
          ".hbnf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hbnf",
        "scopeName": "source.hbnf",
        "path": "./syntaxes/hbnf.tmLanguage.json"
      },
      {
        "scopeName": "markdown.hbnf.injection",
        "path": "./syntaxes/hbnf-injection.json",
        "injectTo": [
          "text.html.markdown",
          "text.html.markdown.gfm"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.hbnf": "hbnf"
        }
      },
      {
        "path": "./syntaxes/hbnf.tmLanguage.json",
        "scopeName": "source.hbnf",
        "injectedLanguages": [
          "markdown"
        ]
      }
    ]
  }
}